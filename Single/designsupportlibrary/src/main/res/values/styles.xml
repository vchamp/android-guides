<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppCompatTheme" parent="BaseAppCompatTheme">
    </style>

    <!-- inherit from the material theme -->
    <style name="BaseAppCompatTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/design_support_primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/design_support_primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/design_support_accent</item>
    </style>
</resources>